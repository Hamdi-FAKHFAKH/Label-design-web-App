{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    // "paths": {
    //   "@env": ["src/environments/*"]
    // },
    //TODO : remove "skipLibCheck": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "ES2021.String"],
    "plugins": [{ "name": "tslint-language-service" }]
  }
}
